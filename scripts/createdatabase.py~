from myproject.charities.models import Charity, CauseCategory
from myproject.settings import MEDIA_URL

def run():
    cause = CauseCategory(cause_category="Animals")
    cause.save()
    cause = CauseCategory(cause_category="Arts/Culture")
    cause.save()
    cause = CauseCategory(cause_category="Education")
    cause.save()
    cause = CauseCategory(cause_category="Environment")
    cause.save()
    cause = CauseCategory(cause_category="Health")
    cause.save()
    cause = CauseCategory(cause_category="Human Services")
    cause.save()
    cause = CauseCategory(cause_category="International")
    cause.save()
    cause = CauseCategory(cause_category="Public Benefit")
    cause.save()
    cause = CauseCategory(cause_category="Religion")
    cause.save()
    charity = Charity(charity_name="Charity Water", city="New York", state="NY", zip="10014", impact="Clean water for one person", perks="2-to-1 matching", ds_verified=True, logo=MEDIA_URL+'img/charities/charity_water/charity-water-logo.png', image1=MEDIA_URL+'img/charities/charity_water/charity_water_image_1.png')
    charity.save()
    cause = CauseCategory.objects.get(cause_category="Health")
    charity.cause_categories.add(cause)
    cause = CauseCategory.objects.get(cause_category="International")
    charity.cause_categories.add(cause)
    charity.save()
    charity = Charity(charity_name="Dartmouth College", city="Hanover", state="NH", zip="03755", impact="1 day student scholarship", perks="Dartmouth rocks!", ds_verified=True, logo=MEDIA_URL+'img/charities/dartmouth_college/dartmouth_college_logo.png', image1=MEDIA_URL+'img/charities/dartmouth_college/dartmouth_college_image_1.png')
    charity.save()
    cause = CauseCategory.objects.get(cause_category="Education")
    charity.cause_categories.add(cause)
    charity.save()
    charity = Charity(charity_name="Grassroot Soccer", city="Norwich", state="VT", zip="05055", impact="Educate 100 children on AIDS", perks="100th donor wins trip to South Africa", ds_verified=True, logo=MEDIA_URL+'img/charities/grassroots_soccer/grassroots_soccer_logo.png', image1=MEDIA_URL+'img/charities/grassroots_soccer/grassroots_soccer_image_1.png')
    charity.save()
    cause = CauseCategory.objects.get(cause_category="Health")
    charity.cause_categories.add(cause)
    cause = CauseCategory.objects.get(cause_category="International")
    charity.cause_categories.add(cause)
    charity.save()
    charity = Charity(charity_name="World Wildlife Fund", city="Washington D.C.", state="DC", zip="20090", impact="Extend tiger's life 1 years", perks="1-to-1 matching by Leo DiCaprio", ds_verified=True)
    charity.save()
    cause = CauseCategory.objects.get(cause_category="Animals")
    charity.cause_categories.add(cause)
    cause = CauseCategory.objects.get(cause_category="Environment")
    charity.cause_categories.add(cause)
    cause = CauseCategory.objects.get(cause_category="International")
    charity.cause_categories.add(cause)
    charity.save()
